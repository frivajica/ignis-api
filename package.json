{
  "name": "ignis-api",
  "version": "0.0.0",
  "description": "Api for ignis",
  "main": "build/app.js",
  "repository": "git@github.com:frivajica/ignis-api.git",
  "author": "frivajica",
  "license": "MIT",
  "scripts": {
    "build": "tsc -w",
    "migrate": "npx prisma generate && npx prisma db push",
    "dev": "yarn migrate && tsc -w & nodemon",
    "start": "ts-node-dev --respawn --pretty --transpile-only ./src/app.ts",
    "compose": "docker-compose build && docker-compose up --force-recreate",
    "prettier:write": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint:check": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.2.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@prisma/client": "^4.8.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prisma": "^4.8.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
